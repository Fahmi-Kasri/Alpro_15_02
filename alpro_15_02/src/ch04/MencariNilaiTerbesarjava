
import java.util.Scanner;


public class MencariNilaiTerbesar {
    public static void main(String[] args) {
        int maksimum, jumlah,i,lokasi = 1, array[];
        
        Scanner scan = new Scanner(System.in);
        System.out.println("Masukkan jumlah nilai :");
        jumlah = scan.nextInt();
        array = new int[jumlah];
        
        System.out.println("masukkan "+jumlah+"angka");
            for (i=0; i<jumlah; i++){
                System.out.println("nilai ke-" + (i+1) +" :");
                array[i] = scan.nextInt();
    }
         maksimum = array[0];
         
         for(i=0; i<jumlah; i++){
             if(array[i] >maksimum){
                 maksimum = array[i];
                 lokasi = i+1;
             }
         }
        System.out.println(lokasi +"Nilai maksimum adalah "+maksimum +"berada di nilai ke-" +lokasi);
    }
}