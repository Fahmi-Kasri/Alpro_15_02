
import java.util.Scanner;

public class angkaduadalamaray {
    public static void main(String[] args) {
   int jum = 12;
   int k = 0;
   int x=0;
   int y=0;
   
        System.out.println("masukkan jumlah elemen aray :");
        Scanner s= new Scanner(System.in);
        jum = s.nextInt();
        int[]array = new int[jum];
        
        System.out.println("masukkan nilai aray sebanyak" + jum);
            for(int i=0; i<jum; i++)
            {
                array[i]=s.nextInt();
            }
        System.out.println("Masukkan nilai aray yang akan dicari :");
        int nilai = s.nextInt();
        
        System.out.println("Nilai yang ada angka 2 :");
        for(x = 0; x<jum; x++)
        {
            System.out.print(array[x]);
        }
        int j;
        for (j=0; j<array.length; j++){
            if(nilai == array[j])
            {
                System.out.println(" ");
                System.out.println(" nilai yang dicari : "+nilai);
                System.out.println("ada pada index ke : "+j);
                k=1;
            }
        }
if (k==0){
    System.out.println("\nnilai "+nilai+" tidak ada dalam array");
}
    }
}
